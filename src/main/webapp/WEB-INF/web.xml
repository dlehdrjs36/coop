<!--    </context-param>-->

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
<!--        &lt;!&ndash; [미동작]자바기반 설정 지금 동작 안됨 나중에 변경해야하면 검색해서 수정 필요 &ndash;&gt;-->
<!--                &lt;!&ndash; DispatcherServlet의 기본 구성인 XmlWebApplicationContext 대신 AnnotationConfigWebApplicationContext를 사용하도록 변경 &ndash;&gt;-->
<!--                <init-param>-->
<!--                    <param-name>contextClass</param-name>-->
<!--                    <param-value>-->
<!--                        org.springframework.web.context.support.AnnotationConfigWebApplicationContext-->
<!--                    </param-value>-->
<!--                </init-param>-->
<!--                &lt;!&ndash; 자바 애노테이션기반 설정 클래스 위치 &ndash;&gt;-->
<!--                <init-param>-->
<!--                    <param-name>contextConfigLocation</param-name>-->
<!--                    <param-value>com.projectteam.coop.web.ServletConfig</param-value>-->
<!--                </init-param>-->
<!--        &lt;!&ndash; //자바기반 설정 지금 동작 안됨 나중에 변경해야하면 검색해서 수정 필요 &ndash;&gt;-->
        <init-param>
            <!-- contextConfigLocation 설정을 통해서 서블릿이 참조할 context 파일을 설정할 수 있다.
                DispatcherServlet은 Spring 컨테이너를 구동할 때, web.xml 파일에 등록된 서블릿 이름 뒤에 ‘-servlet.xml’을 붙인 이름의 스프링 설정파일을 자동으로 찾는다.
                이 설정을 추가하지 않았다면 dispatcher-servlet.xml 파일을 찾았을 것이다.
            -->
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>
            org.springframework.web.filter.CharacterEncodingFilter
        </filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
