<!--        <filter-class>-->
<!--            com.projectteam.coop.web.filter.LoginCheckFilter-->
<!--        </filter-class>-->
<!--    </filter>-->
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
